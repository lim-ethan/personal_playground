{
  "type": "index_parallel",
  "spec": {
    "dataSchema": {
      "dataSource": "sample_datasource",
      "timestampSpec": {
        "column": "timestamp",
        "format": "iso"
      },
      "dimensionsSpec": {
        "dimensions": ["country", "category"]
      },
      "metricsSpec": [
        { "name": "count", "type": "count" }
      ],
      "granularitySpec": {
        "type": "uniform",
        "segmentGranularity": "DAY",
        "queryGranularity": "NONE",
        "rollup": true
      }
    },
    "ioConfig": {
      "type": "index_parallel",
      "inputSource": { "type": "local", "baseDir": "/opt/data", "filter": "*.json" },
      "inputFormat": { "type": "json", "findColumnsFromHeader": true }
    },
    "tuningConfig": { "type": "index_parallel" }
  }
}
